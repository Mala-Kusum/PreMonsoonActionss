<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="5dp"
    android:backgroundTint="#E3F4F4"
    android:layout_marginVertical="5dp"
    android:paddingVertical="10dp"
    app:cardCornerRadius="20dp"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/materialcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="@integer/material_motion_duration_medium_2"
                android:id="@+id/Name"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567888888888888"/>
            <TextView
                android:layout_weight="@integer/material_motion_duration_long_2"
                android:id="@+id/No"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567888"/>
            />
            <TextView
                android:layout_weight="@integer/material_motion_duration_medium_2"
                android:id="@+id/PMU"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345678888888888888888888888"/>
            />
            <ImageView
                android:id="@+id/drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_ff"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
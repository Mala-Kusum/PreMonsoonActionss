<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="10dp"
        app:cardElevation="5dp"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingDefaultResource">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7F1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/materialcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:background="#E3F4F4"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/Name"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567888888888888"/>
                    <TextView
                        android:layout_weight="4"
                        android:id="@+id/No"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </LinearLayout>
                <!--<TextView
                    android:layout_weight="@integer/material_motion_duration_medium_2"
                    android:id="@+id/PMU"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12345678888888888888888888888"/>-->
                <ImageView
                    android:id="@+id/drawer"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pmuwise"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_error_24"
        app:tint="#A0A0A0" />
</LinearLayout>

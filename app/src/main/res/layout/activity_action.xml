<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Action">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF7F1"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/actiontaken"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:backgroundTint="#B4D4FF"
            android:textStyle="bold"
            android:text="Action Taken Reports"
            android:textColor="#454545" />
        <Button
            android:id="@+id/equipments"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:backgroundTint="#B4D4FF"
            android:shadowRadius="5"
            android:text="Equipment"
            android:textStyle="bold"
            android:textColor="#454545" />
        <Button
            android:id="@+id/materials"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:backgroundTint="#B4D4FF"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:text="Materials"
            android:textColor="#454545" />
        <Button
            android:id="@+id/raterunning"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:backgroundTint="#B4D4FF"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:text="Rate Running contracts"
            android:textColor="#454545" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>